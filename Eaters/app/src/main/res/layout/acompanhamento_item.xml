<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/itemAcompanhamento"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="4dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/acompanhamentoqnt"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:background="@android:color/white"
                android:text="0"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                app:fontFamily="sans-serif"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/acompanhamentoadd"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/acompanhamentoadd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:tint="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:drawable/ic_input_add" />

            <ImageView
                android:id="@+id/acompanhamentominus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:tint="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/acompanhamentoqnt"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:drawable/button_onoff_indicator_off" />

            <TextView
                android:id="@+id/acompanhamentoname"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Acompanhamento X"
                android:textColor="@color/colorText"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toEndOf="@+id/guidelineacompanhamento"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/acompanhamentoprecolabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valor por Unidade:"
                android:textColor="@color/colorText"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/guidelineacompanhamento"
                app:layout_constraintTop_toBottomOf="@+id/acompanhamentoname" />

            <TextView
                android:id="@+id/acompanhamentopreco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valor"
                android:textColor="@color/colorText"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/acompanhamentoname"
                app:layout_constraintStart_toEndOf="@+id/acompanhamentoprecolabel" />

            <ImageView
                android:id="@+id/acompanhamentoicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guidelineacompanhamento"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_launcher" />

            <android.support.constraint.Guideline
                android:id="@+id/guidelineacompanhamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="80dp" />


        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
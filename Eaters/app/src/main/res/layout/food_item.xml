<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_margin="2dp"
    android:id="@+id/itemfood">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="181dp">


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/back_img_food"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/food_name"
            android:layout_width="185dp"
            android:layout_height="33dp"
            android:layout_marginTop="24dp"
            android:textColor="#000"
            android:textSize="10pt"
            app:layout_constraintStart_toEndOf="@+id/back_img_food"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/food_preco"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/food_ingredients"
            app:layout_constraintVertical_bias="0.0" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/food_ingredients"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/back_img_food"
            app:layout_constraintTop_toBottomOf="@+id/img_star" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/img_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star_black_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/back_img_food"
            app:layout_constraintTop_toBottomOf="@+id/food_name" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/food_nota"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/img_star"
            app:layout_constraintTop_toBottomOf="@+id/food_name" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PreÃ§o:"
            app:layout_constraintStart_toEndOf="@+id/back_img_food"
            app:layout_constraintTop_toBottomOf="@+id/food_ingredients" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>